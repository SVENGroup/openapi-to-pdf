{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "types": [
            "node"
        ],
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@features/*": [
                "features/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
