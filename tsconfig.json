{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@features/*": [
                "features/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
}
